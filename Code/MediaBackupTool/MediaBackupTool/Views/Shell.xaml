<Window x:Class="MediaBackupTool.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- App Title -->
                <TextBlock DockPanel.Dock="Top"
                           Text="Media Backup Tool"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="15,15,15,5"/>

                <!-- Project Name -->
                <TextBlock DockPanel.Dock="Top"
                           Text="{Binding ProjectName}"
                           FontSize="11"
                           Foreground="Gray"
                           Margin="15,0,15,15"
                           Visibility="{Binding IsProjectLoaded, Converter={StaticResource BoolToVisibility}}"/>

                <!-- Status -->
                <Border DockPanel.Dock="Bottom"
                        Background="#E8E8E8"
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Status:" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="{Binding State.CurrentState}" FontWeight="SemiBold"/>
                        <ProgressBar Height="4"
                                     Margin="0,5,0,0"
                                     Value="{Binding State.Progress}"
                                     Visibility="{Binding State.IsOperationActive, Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Margin="10">
                    <Button Content="Project"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Project"
                            Margin="0,2" Padding="10,8"/>

                    <Separator Margin="0,10"/>

                    <Button Content="1. Sources &amp; Filters"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Sources"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>

                    <Button Content="2. Scan Files"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Scan"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>

                    <Button Content="3. Hash Files"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Hash"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>

                    <Button Content="4. Plan"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Plan"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>

                    <Button Content="5. Copy"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Copy"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>

                    <Button Content="6. Verify (Optional)"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Verification"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>

                    <Separator Margin="0,10"/>

                    <Button Content="Duplicates"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Duplicates"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>

                    <Button Content="Logs"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Logs"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>

                    <Button Content="Settings"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Settings"
                            IsEnabled="{Binding IsProjectLoaded}"
                            Margin="0,2" Padding="10,8"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1"
                        Content="{Binding Navigation.CurrentViewModel}"
                        Margin="0">
            <ContentControl.Resources>
                <!-- DataTemplates for each ViewModel will be added here -->
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>
