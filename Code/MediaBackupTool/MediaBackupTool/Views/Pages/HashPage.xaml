<UserControl x:Class="MediaBackupTool.Views.Pages.HashPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Computing Hashes" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding StatusMessage}" FontSize="14" VerticalAlignment="Bottom"
                       Foreground="Gray" Margin="15,0,0,3"/>
        </StackPanel>

        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Start" Command="{Binding StartHashCommand}"
                    Padding="20,10" Margin="0,0,10,0"
                    Visibility="{Binding IsHashing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
            <Button Content="Pause" Command="{Binding PauseHashCommand}"
                    Padding="20,10" Margin="0,0,10,0"
                    Visibility="{Binding IsHashing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Resume" Command="{Binding ResumeHashCommand}"
                    Padding="20,10" Margin="0,0,10,0"
                    Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Cancel" Command="{Binding CancelHashCommand}"
                    Padding="20,10" Margin="0,0,10,0"
                    Visibility="{Binding IsHashing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Back to Scan" Command="{Binding NavigateBackCommand}"
                    Padding="20,10"/>
        </StackPanel>

        <!-- Main Progress Area -->
        <GroupBox Grid.Row="2" Header="Hash Progress">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Current File -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Current file:" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding CurrentFile}" TextTrimming="CharacterEllipsis"
                               FontFamily="Consolas" FontSize="12"/>
                </StackPanel>

                <!-- Progress Bar -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <ProgressBar Value="{Binding PercentComplete}" Maximum="100"
                                 Height="24"/>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontWeight="SemiBold">
                        <Run Text="{Binding PercentComplete, StringFormat='{}{0:F1}', Mode=OneWay}"/>
                        <Run Text="%"/>
                    </TextBlock>
                </Grid>

                <!-- Worker Info -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Workers: " Foreground="Gray"/>
                    <TextBlock Text="{Binding WorkerCount}" FontWeight="SemiBold"/>
                    <TextBlock Text="  |  " Foreground="LightGray"/>
                    <TextBlock Text="Progress: " Foreground="Gray"/>
                    <TextBlock Text="{Binding TotalBytesDisplay}" FontWeight="SemiBold"/>
                    <TextBlock Text=" / " Foreground="Gray"/>
                    <TextBlock Text="{Binding TotalToHashDisplay}" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Statistics Grid -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Files Hashed -->
                    <Border Background="#F5F5F5" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Files Hashed" FontSize="11" Foreground="Gray"/>
                            <TextBlock FontSize="28" FontWeight="Light">
                                <Run Text="{Binding FilesHashed, StringFormat='{}{0:N0}', Mode=OneWay}"/>
                                <Run Text=" / " FontSize="16" Foreground="Gray"/>
                                <Run Text="{Binding TotalFiles, StringFormat='{}{0:N0}', Mode=OneWay}" FontSize="16" Foreground="Gray"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Unique Files -->
                    <Border Grid.Column="1" Background="#E8F5E9" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Unique Files" FontSize="11" Foreground="Gray"/>
                            <TextBlock Text="{Binding UniqueHashesFound, StringFormat='{}{0:N0}'}"
                                       FontSize="28" FontWeight="Light" Foreground="#2E7D32"/>
                        </StackPanel>
                    </Border>

                    <!-- Duplicates -->
                    <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Duplicates" FontSize="11" Foreground="Gray"/>
                            <TextBlock Text="{Binding DuplicatesFound, StringFormat='{}{0:N0}'}"
                                       FontSize="28" FontWeight="Light" Foreground="#E65100"/>
                        </StackPanel>
                    </Border>

                    <!-- Speed -->
                    <Border Grid.Column="3" Background="#F5F5F5" CornerRadius="6" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Speed" FontSize="11" Foreground="Gray"/>
                            <TextBlock FontSize="28" FontWeight="Light">
                                <Run Text="{Binding MbPerSecond, StringFormat='{}{0:N1}', Mode=OneWay}"/>
                                <Run Text=" MB/s" FontSize="14"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Elapsed: " Foreground="Gray"/>
                <TextBlock Text="{Binding ElapsedTime, StringFormat='{}{0:hh\\:mm\\:ss}'}" FontWeight="SemiBold"/>
                <TextBlock Text="  |  " Foreground="LightGray" Margin="5,0"/>
                <TextBlock Text="Errors: " Foreground="Gray"/>
                <TextBlock Text="{Binding ErrorCount}" FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ErrorCount}" Value="0">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="4" Background="#FFF0F0" BorderBrush="#FFCCCC" BorderThickness="1"
                Padding="10" Margin="0,10,0,0" CornerRadius="4"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#CC0000"/>
        </Border>

        <!-- Hash Complete Panel -->
        <Border Grid.Row="4" Background="#F0FFF0" BorderBrush="#90EE90" BorderThickness="2"
                Padding="20" Margin="0,15,0,0" CornerRadius="8"
                Visibility="{Binding IsHashComplete, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Hashing Complete!" FontSize="18" FontWeight="Bold" Foreground="#228B22"/>
                </StackPanel>
                <TextBlock Text="{Binding CompletionMessage}" TextWrapping="Wrap" Margin="0,0,0,15"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Next: View Plan"
                            Command="{Binding NavigateToNextCommand}"
                            Padding="25,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="Re-hash"
                            Command="{Binding StartHashCommand}"
                            Padding="20,12"
                            Margin="15,0,0,0"/>
                    <Button Content="Back to Scan"
                            Command="{Binding NavigateBackCommand}"
                            Padding="20,12"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
