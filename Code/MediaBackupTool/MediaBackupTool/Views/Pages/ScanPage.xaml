<UserControl x:Class="MediaBackupTool.Views.Pages.ScanPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Scanning Files" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding StatusMessage}" FontSize="14" VerticalAlignment="Bottom"
                       Foreground="Gray" Margin="15,0,0,3"/>
        </StackPanel>

        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Pause" Command="{Binding PauseScanCommand}"
                    Padding="20,10" Margin="0,0,10,0"
                    Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Resume" Command="{Binding ResumeScanCommand}"
                    Padding="20,10" Margin="0,0,10,0"
                    Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Cancel" Command="{Binding CancelScanCommand}"
                    Padding="20,10" Margin="0,0,10,0"
                    Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Back to Sources" Command="{Binding NavigateBackCommand}"
                    Padding="20,10"/>
        </StackPanel>

        <!-- Main Progress Area -->
        <GroupBox Grid.Row="2" Header="Scan Progress">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Current Root -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Current root: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentRoot}" Foreground="DimGray"/>
                </StackPanel>

                <!-- Current Path -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="Current path:" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding CurrentPath}" TextTrimming="CharacterEllipsis"
                               FontFamily="Consolas" FontSize="12"/>
                </StackPanel>

                <!-- Animated Progress Indicator -->
                <ProgressBar Grid.Row="2" IsIndeterminate="{Binding IsScanning}"
                             Height="6" Margin="0,0,0,20"/>

                <!-- Statistics Grid -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Files Found -->
                    <Border Background="#F5F5F5" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Files Found" FontSize="11" Foreground="Gray"/>
                            <TextBlock Text="{Binding FilesFound, StringFormat='{}{0:N0}'}"
                                       FontSize="28" FontWeight="Light"/>
                        </StackPanel>
                    </Border>

                    <!-- Directories Scanned -->
                    <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Directories" FontSize="11" Foreground="Gray"/>
                            <TextBlock Text="{Binding DirectoriesScanned, StringFormat='{}{0:N0}'}"
                                       FontSize="28" FontWeight="Light"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Size -->
                    <Border Grid.Column="2" Background="#F5F5F5" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Total Size" FontSize="11" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalBytesDisplay}"
                                       FontSize="28" FontWeight="Light"/>
                        </StackPanel>
                    </Border>

                    <!-- Speed -->
                    <Border Grid.Column="3" Background="#F5F5F5" CornerRadius="6" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Speed" FontSize="11" Foreground="Gray"/>
                            <TextBlock FontSize="28" FontWeight="Light">
                                <Run Text="{Binding FilesPerSecond, StringFormat='{}{0:N0}', Mode=OneWay}"/>
                                <Run Text="/sec" FontSize="14"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Error/Status Display -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Elapsed Time -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Elapsed: " Foreground="Gray"/>
                <TextBlock Text="{Binding ElapsedTime, StringFormat='{}{0:hh\\:mm\\:ss}'}" FontWeight="SemiBold"/>
                <TextBlock Text="  |  " Foreground="LightGray" Margin="5,0"/>
                <TextBlock Text="Errors: " Foreground="Gray"/>
                <TextBlock Text="{Binding ErrorCount}" FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ErrorCount}" Value="0">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="4" Background="#FFF0F0" BorderBrush="#FFCCCC" BorderThickness="1"
                Padding="10" Margin="0,10,0,0" CornerRadius="4"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#CC0000"/>
        </Border>
    </Grid>
</UserControl>
