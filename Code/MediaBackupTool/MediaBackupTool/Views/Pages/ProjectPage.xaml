<UserControl x:Class="MediaBackupTool.Views.Pages.ProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="600">
            <TextBlock Text="Project" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- New Project Section -->
            <GroupBox Header="Create New Project" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Project Name:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewProjectName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Project Location:" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding NewProjectPath, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,5,0"/>
                        <Button Grid.Column="1" Content="Browse..."
                                Command="{Binding BrowseProjectPathCommand}"
                                Padding="15,5"/>
                    </Grid>

                    <TextBlock Text="Hash Algorithm:" Margin="0,15,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableHashLevels}"
                              SelectedItem="{Binding SelectedHashLevel}"
                              Margin="0,0,0,15"/>

                    <Button Content="Create Project"
                            Command="{Binding CreateProjectCommand}"
                            Padding="15,10"
                            HorizontalAlignment="Left"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               Margin="0,10,0,0"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibility}}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>

            <!-- Open Project Section -->
            <GroupBox Header="Open Existing Project" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Button Content="Open Project Folder..."
                            Command="{Binding OpenProjectCommand}"
                            Padding="15,10"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </GroupBox>

            <!-- Recent Projects Section -->
            <GroupBox Header="Recent Projects" Padding="15">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding RecentProjects}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.OpenRecentProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        HorizontalContentAlignment="Left"
                                        Margin="0,2"
                                        Padding="10,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Path}" FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="No recent projects"
                               Foreground="Gray"
                               Visibility="{Binding RecentProjects.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Invert}"/>
                </StackPanel>
            </GroupBox>

            <!-- Busy Indicator -->
            <Border Background="#80000000"
                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}"
                    Margin="-20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                    <TextBlock Text="{Binding BusyMessage}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
